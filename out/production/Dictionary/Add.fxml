<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerAdd">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="590.0" styleClass="pane" stylesheets="@Style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Enrich Dictionary" textFill="#f8a02d">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="45.0" />
               </VBox.margin>
            </Label>
            <Label text="English " textFill="WHITE">
               <font>
                  <Font name="Cambria" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets right="450.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="englishWord" prefHeight="50.0" prefWidth="540.0" promptText="Type here to add">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Cambria" size="20.0" />
               </font>
            </TextField>
            <Label text="Vietnamese" textFill="WHITE">
               <font>
                  <Font name="Cambria" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets right="420.0" top="15.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="vietnameseWord" prefHeight="270.0" prefWidth="540.0" wrapText="true">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Cambria" size="20.0" />
               </font>
            </TextArea>
            <Button mnemonicParsing="false" onAction="#clickAddWord" stylesheets="@Style.css" text="Add Word" textFill="WHITE">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Cambria" size="20.0" />
               </font>
               <styleClass>
                  <String fx:value="search-button" />
                  <String fx:value="selected" />
               </styleClass>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
